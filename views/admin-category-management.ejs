                        </th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if(!categories){%>
                      <h3>There is no categories to show...</h3>
                      <% }else{ %> <% categories.forEach(category => { %>
                      <tr>
