                    <% banners.forEach((banner)=> { %>
                        <div style="margin-top: 20px; width: 100%; overflow-x: auto;">
                            <table style="width: 100%;">

                                <thead>
                                    <div style="margin-right: 20px;">
                                        <!-- Display the photo, adjust the path based on your server setup -->
                                        <img src="<%= banner.photo %>" alt="Banner Photo"
                                            style="width: 100%; height: auto;">
                                    </div>
                                    <tr>
                                        <th>Title</th>
                                        <th>Type</th>
                                        <th>Link</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Iterate over your banners and populate the table rows -->
                                    <tr>
                                        <td>
                                            <%= banner.title %>
                                        </td>
                                        <td>
                                            <%= banner.type %>
                                        </td>
                                        <td>
                                            <%= banner.link %>
                                        </td>
                                        <td>
                                            <%= banner.startDate.toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= banner.endDate.toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= banner.isActive ? 'Active' : 'Inactive' %>
                                        </td>
                                        <td>
                                            <button
                                                class="mb-5 btn btn-sm<%= banner.isActive === true ? ' red-button' : (banner.isActive === false ? ' green-button' : '') %>"
                                                onclick="toggleBannerStatus('<%= banner._id %>', '<%= banner.isActive %>')">
                                                <% if (banner.isActive===false) { %>
                                                    Unblock
                                                    <% } else { %>
                                                        Block
                                                        <% } %>
                                            </button>
                                        </td>
                                        <td><a href="/admin/getEditBanner/?bannerId=<%=banner._id%>"
                                                class="btn btn-md rounded font-sm">Edit</a></td>
                                    </tr>
                                </tbody>
                            </table>
                            <br><br>
                            <% }) %>
                        </div> <!-- table-responsive //end -->

                        <script>
                            function toggleBannerStatus(bannerId, currentStatus) {
                                const statusElement = document.querySelector(`#status-${bannerId}`);

                                // Toggle the user's status
                                
                                const newStatus = currentStatus === 'true' ? false : true;
                                
                                fetch(`/admin/update-banner-status/${bannerId}`, {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json',
                                    },
                                    body: JSON.stringify({ status: newStatus }),
                                })
                                    .then(response => {
                                        if (response.ok) {
                                            location.reload();
                                        } else {
                                            // Handle the error
                                            console.error('Error updating banner status');
                                        }
                                    })
                                    .then(data => {
                                        // Update the button's text with the new status from the response
                                        statusElement.textContent = data.status;
                                        // Remove the deleted product row from the table
                                        // Reload the page to reflect the updated status
                                    })
                                    .catch(error => {
                                        console.error(error);
                                    });
                            };
