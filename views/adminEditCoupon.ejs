        <section class="content-main">
            <h3>Edit coupon</h3>
            <div class="row">
                <div class="col-9">
                    <div class="content-header">
                        <form id="coupon-form" action="/admin/saveEditedCoupon" method="post">
                            <input type="hidden" id="couponId" name="couponId" value="<%= couponDoc._id %>">
                            <label for="code">Coupon Code:</label>
                            <input type="text" value="<%= couponDoc.code %>" id="code" name="code" placeholder="Enter a unique coupon code" required>
                            <label for="discountType">Discount Type:</label>
                            <select name="discountType" id="discountType">
                              <option value="percentage" <%= couponDoc.discountType === 'percentage' ? 'selected' : '' %>>Percentage Discount</option>
                              <option value="fixedAmount" <%= couponDoc.discountType === 'fixedAmount' ? 'selected' : '' %>>Fixed Amount Discount</option>
                            </select>
                            <label for="discountValue">Discount Value:</label>
                            <input value="<%= couponDoc.discountValue %>" type="number" id="discountValue" name="discountValue" placeholder="Enter the discount value" required>
                            <label for="minOrderAmount">Minimum Order Amount:</label>
                            <input value="<%= couponDoc.minOrderAmount %>" type="number" id="minOrderAmount" name="minOrderAmount" placeholder="Enter the minimum order amount (optional)" min="0">
                            <div id="redeemInput" style="display: none;" >
                                <label for="maxRedeemableAmount">Maximum Redeemable Amount:</label>
                                <input 
                                disabled
                                value="<%= couponDoc.discountType==="fixedAmount"?couponDoc.discountValue:couponDoc.maxRedeemableAmt%>"
                                  type="number"
                                  id="maxRedeemableAmount"
                                  name="maxRedeemableAmount"
                                  placeholder="Enter the maximum redeemable amount"
                                  min="1"
                                />
                              </div>
                            <label for="expirationDate">Expiration Date:</label>
                            <input  value="<%= couponDoc.expirationDate.toISOString().split('T')[0] %>" type="date" id="expirationDate" name="expirationDate" placeholder="Select the expiration date" required>
                            <button type="submit">Save changes</button>
                        </form>
                         </div>
