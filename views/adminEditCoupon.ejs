                    <script>
                    document.addEventListener("DOMContentLoaded", function () {
                      // Prevent `e` and `E` in number fields
                      const preventEAndE = (event) => {
                        const key = event.key;
                        if (key === 'e' || key === 'E') {
                          event.preventDefault();
                        }
                      };
                    
                      // Add event listeners to number fields
                      const numberFields = document.querySelectorAll('input[type="number"]');
                      numberFields.forEach((field) => {
                        field.addEventListener('keydown', preventEAndE);
                      });
                    
                      // Form submission script
                      const form = document.getElementById('coupon-form');
                      form.addEventListener('submit', async (event) => {
                        event.preventDefault();
                    
                        // Validate form
                        if (!validateForm()) {
                          return;
                        }
                    
                        const formData = {
                          couponId: document.getElementById('couponId').value,
                          code: document.getElementById('code').value,
                          discountType: document.getElementById('discountType').value,
                          discountValue: document.getElementById('discountValue').value,
                          minOrderAmount: document.getElementById('minOrderAmount').value,
                          maxRedeemableAmount: document.getElementById('maxRedeemableAmount').value,
                          expirationDate: document.getElementById('expirationDate').value,
                        };
                    
                        // Only include maxRedeemableAmount in formData if discountType is "fixedAmount"
                        if (formData.discountType === 'fixedAmount') {
                          formData.maxRedeemableAmount = document.getElementById('maxRedeemableAmount').value;
                        }
                    
                        console.log(formData);
                    
                        try {
                          const response = await fetch("/admin/saveEditedCoupon", {
                            method: 'POST',
                            headers: {
                              'Content-Type': 'application/json',
                            },
                            body: JSON.stringify(formData),
                          });
                    
                          const data = await response.json();
                    
                          if (response.ok) {
                            Swal.fire({
                              icon: 'success',
                              title: 'Success!',
                              text: 'Coupon details have been updated successfully!',
                            });
                            setTimeout(() => {
                              window.location.href = '/admin/couponManagement';
                            }, 1500);
                            console.log('Coupon updated successfully:', data);
                          } else {
                            Swal.fire({
                              icon: 'error',
                              title: 'Error!',
                              text: data.message || 'An unknown error occurred.',
                            });
                          }
                        } catch (error) {
                          console.error('Failed to update coupon:', error);
                          Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Something went wrong! Please try again.',
                          });
                        }
                      });
                    
                      // Validation script
                      function validateForm() {
                        // Validate required fields
                        const requiredFields = ['code', 'discountType', 'discountValue', 'expirationDate'];
                        for (const field of requiredFields) {
                          const fieldElement = document.getElementById(field);
                          if (fieldElement.value.trim() === '') {
                            // Display SweetAlert error message and return false
                            Swal.fire({
                              icon: 'error',
                              title: 'Validation Error',
                              text: `${fieldElement.name} is required.`,
                            });
                            return false;
                          }
                        }
                    
                        // Validate number fields
                        const maxValueElement = document.getElementById('redeemInput');
                        if(maxValueElement.style.display==='block'){
                          if (maxValueElement.value.trim() === '' || fieldElement.value <= 0) {
                            // Display SweetAlert error message and return false
                            Swal.fire({
                              icon: 'error',
                              title: 'Validation Error',
                              text: `${maxValueElement.name} must be a positive value.`,
                            });
                            return false;
                          }                          
                        }
                        const minOrderElement = document.getElementById('minOrderAmount').value===null?"empty":document.getElementById('minOrderAmount').value.trim();
                        console.log("====="+minOrderElement)
                        if(minOrderElement.value!=="empty"){
                          if (minOrderElement.value=== '' || minOrderElement.value <= 0) {
                            // Display SweetAlert error message and return false
                            Swal.fire({
                              icon: 'error',
                              title: 'Validation Error',
                              text: `${minOrderElement.name} must be a positive value.`,
                            });
                            return false;
                          }                          
                        }
                        const numberFields = ['discountValue'];
                        for (const field of numberFields) {
                          const fieldElement = document.getElementById(field);
                          if (fieldElement.value.trim() === '' || fieldElement.value <= 0) {
                            // Display SweetAlert error message and return false
                            Swal.fire({
                              icon: 'error',
                              title: 'Validation Error',
                              text: `${fieldElement.name} must be a positive value.`,
                            });
                            return false;
                          }
                        }
                    
                        // Validate expiration date
                        const expirationDateField = document.getElementById('expirationDate');
                        const today = new Date().toISOString().split('T')[0];
                        if (expirationDateField.value < today) {
                          // Display SweetAlert error message and return false
                          Swal.fire({
                            icon: 'error',
                            title: 'Validation Error',
                            text: 'Expiration date must be in the future.',
                          });
                          return false;
                        }
                    
                        // All validations passed, return true
                        return true;
                      }
                    });
                    
                      
                    </script>
