                            </select>
                        </div>
                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table style="border: 1px solic black;" class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Order Id</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Products</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Subtotal</th>
                                    <th scope="col">Payment method</th>
                                    <th scope="col">Payment Status</th>
                                    <th scope="col">Order Status</th>
                                    <th scope="col" class="text-end"> Action </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% orderDetails.products.forEach((product) => { %>
                                    <tr style="border-bottom: 1px solid rgb(43, 40, 40);">
                                        <td><%= orderDetails._id %></td>
                                        <td><%= orderDetails.orderDate.toLocaleDateString() %></td>
                                        <td>•<%= product.productId.name %></td>
                                        <td>₹<%= product.price %></td>
                                        <td><%= product.quantity %></td>
                                        <td>₹<%= product.price * product.quantity %></td>
                                        <td><%= orderDetails.paymentMethod %></td>
                                        <td><%= orderDetails.paymentStatus %></td>
                                        <td><%= orderDetails.orderStatus %></td>
                                      </td>
                                    </tr>
                                    <% }); %>                           
                                 </tbody>                            
                        </table>
                    </div> <!-- table-responsive //end -->
