                     <script>
                        function toggleDiscountStatus(discountId, currentStatus) {
                            const statusElement = document.querySelector(`#status-${discountId}`);
                            
                            // Toggle the user's status
                            const newStatus = currentStatus === 'Active' ? 'Inactive' : 'Active';
                        
                            fetch(`/admin/update-discount-status/${discountId}`, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                },
                                body: JSON.stringify({ status: newStatus }),
                            })
                            .then(response => {
                                if (response.ok) {
                                    return response.json();
                                } else {
                                    // Handle the error
                                    console.error('Error updating coupon status');
                                }
                            })
                            .then(data => {
                                // Update the button's text with the new status from the response
                                statusElement.textContent = data.status;
                                // Reload the page to reflect the updated status
                                location.reload();
                            })
                            .catch(error => {
                                console.error(error);
                            });
                        };
                        </script>
        
                       



      
